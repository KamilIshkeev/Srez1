<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Srez1.Views.MessageBoxWindow"
        Title="Сообщение"
        Width="400" Height="150"
        WindowStartupLocation="CenterOwner"
        Background="#FFFFFF"
        FontFamily="Comic Sans MS">
    <Grid RowDefinitions="*,Auto">
        <TextBlock Name="MessageText" Margin="20" TextWrapping="Wrap"/>
        <Button Grid.Row="1" HorizontalAlignment="Center" Padding="10,4" Click="OnClick">OK</Button>
    </Grid>
</Window>