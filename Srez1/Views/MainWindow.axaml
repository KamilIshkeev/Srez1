<!-- Srez1/Views/MainWindow.axaml -->
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Srez1.Views.MainWindow"
        Title="Материалы — «Мозаика»"
        Width="1200" Height="700"
        Background="#FFFFFF"
        FontFamily="Comic Sans MS"
        Icon="avares://Srez1/Resources/Mosaic.ico">

    <Window.Styles>
        <Style Selector="Button">
            <Setter Property="Background" Value="#546F94"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,Auto">

        <StackPanel Orientation="Horizontal" Margin="10">
            <Image Source="avares://Srez1/Resources/Mosaic.png" Width="70" Height="70"/>
            <TextBlock Text="Подсистема материалов" FontSize="24" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <DataGrid Name="MaterialsGrid"
                  Grid.Row="1"
                  Margin="10"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  DoubleTapped="MaterialsGrid_DoubleTapped">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Тип" Binding="{Binding MaterialType.Name}" Width="120"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding UnitPrice, StringFormat='{}{0:F2}'}" Width="80"/>
                <DataGridTextColumn Header="Остаток" Binding="{Binding StockQuantity, StringFormat='{}{0:F2}'}" Width="90"/>
                <DataGridTextColumn Header="Мин. кол-во" Binding="{Binding MinStock, StringFormat='{}{0:F2}'}" Width="90"/>
                <DataGridTextColumn Header="Упаковка" Binding="{Binding PackageQuantity, StringFormat='{}{0:F0}'}" Width="80"/>
                <DataGridTextColumn Header="Ед. изм." Binding="{Binding UnitOfMeasure}" Width="70"/>
                <DataGridTextColumn Header="Стоимость мин. партии" Binding="{Binding MinOrderCost, StringFormat='{}{0:F2}'}" Width="140"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="10">
            <Button Content="Добавить" Click="OnAddClick"/>
            <Button Content="Поставщики" Click="OnSuppliersClick"/>
        </StackPanel>
    </Grid>
</Window>