<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Srez1.Views.MainWindow"
        Title="Материалы — «Мозаика»"
        Width="1200" Height="700"
        Background="#FFFFFF"
        FontFamily="Comic Sans MS"
        Icon="avares://Srez1/Resources/Mosaic.ico">

    <Window.Styles>
        <Style Selector="Button">
            <Setter Property="Background" Value="#546F94"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,Auto">
        <StackPanel Orientation="Horizontal" Background="#ABCFCE" Margin="10">
            <Image Source="avares://Srez1/Resources/Mosaic.png" Width="70" Height="70"/>
            <TextBlock Text="Подсистема материалов" FontSize="24" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" Margin="10">
            <ItemsControl Name="MaterialsList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="2" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Name="CardBorder"
                                Background="#FFFFFF"
                                BorderBrush="#ABCFCE"
                                BorderThickness="1"
                                Margin="5"
                                Padding="10"
                                CornerRadius="5"
                                Cursor="Hand"
                                DoubleTapped="MaterialsList_ItemDoubleTapped"
                                PointerPressed="MaterialsList_ItemClicked">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <StackPanel Width="300">
                                    <StackPanel Orientation="Horizontal" Spacing="5">
                                        <TextBlock Text="{Binding MaterialType.Name}" FontSize="16" FontWeight="Bold"/>
                                        <TextBlock Text="|" FontSize="16" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding MinStock, StringFormat='Минимальное количество: {0:F0}'}" Margin="0,3,0,0"/>
                                    <TextBlock Text="{Binding StockQuantity, StringFormat='Количество на складе: {0:F0}'}" Margin="0,3,0,0"/>
                                    <TextBlock Text="{Binding UnitPrice, StringFormat='Цена: {0:F2} р'}" Margin="0,3,0,0"/>
                                    <TextBlock Text="{Binding UnitOfMeasure.Symbol, StringFormat='Единица измерения: {0}'}" Margin="0,3,0,0"/>
                                </StackPanel>

                                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding MinOrderCost, StringFormat='Стоимость партии: {0:F2} р'}" 
                                               FontSize="16" FontWeight="SemiBold"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="10">
            <Button Content="Добавить" Click="OnAddClick"/>
            <Button Content="Поставщики" Click="OnSuppliersClick"/>
        </StackPanel>
    </Grid>
</Window>